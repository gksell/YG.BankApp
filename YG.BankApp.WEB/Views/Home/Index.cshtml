@model IEnumerable<UserListModel>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Account Count</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td><getAccountCount application-user-id="@item.Id"></getAccountCount></td>
            <td>@Html.ActionLink("Hesap Detayları", "GetAccountList", "Account", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })</td>
            @*<td> <a asp-action="Create" asp-controller="Account" asp-route-id="@item.Id"> Tıkla </a></td>*@
            <td>@Html.ActionLink("Hesap Oluştur", "Create", "Account", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })</td>
        </tr>
        }
        
        
    </tbody>
</table>